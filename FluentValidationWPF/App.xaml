<Application x:Class="FluentValidationWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FluentValidationWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="btnStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="Button" x:Key="btnAddStyle" BasedOn="{StaticResource btnStyle}">
            <Setter Property="Content" Value="Додати елемент"/>
        </Style>
        <Style TargetType="Button" x:Key="btnUpdateStyle" BasedOn="{StaticResource btnStyle}">
            <Setter Property="Content" Value="Редагувати елемент"/>
        </Style>
        <Style x:Key="columnHeaderStyle">
            <Setter Property="Control.FontSize" Value="12"/>
            <Setter Property="Control.Width" Value="130"/>
        </Style>
        <Style x:Key="columnCellStyle">
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.Width" Value="130"/>
        </Style>
    </Application.Resources>
</Application>
